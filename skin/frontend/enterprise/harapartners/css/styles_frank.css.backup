.page .header-container .header .quick-access{
   float:right;
   width: 350px;
   font-size:13px;
}

.page .header-container .header .quick-access .links li a,
.page .header-container .header .quick-access .header-help a,
.page .header-container .header .quick-access .header-return a,
.page .header-container #cartHeader
{
  font-size:14px;
  color:#615758;
  font-weight:normal;
  text-transform:none;

}
.page .header-container .header .quick-access-column{
   float:left;
   font-size:14px;
   color:#000000;
   margin:0px;
   padding:0px 10px;
   border-right:1px solid #000000;

}
.page .header-container .header .quick-access-column.last{
  border-right:0px;
}

.page .header-container  .header .quick-access .links li{
  background:none;
  padding:0px;
}

.page .header-container .header .quick-access-column .top-cart{
  padding:0px;
}

.page .header-container .header .quick-access-column .top-cart .block-title{
  background:none;
  padding:0px;
}

.page .header-container .header .quick-access-column .top-cart .block-title strong{
 /*background-image:url("../images/cart_icon.png");*/

}

.page .header-container .header .header-search-bar{
  margin-top:50px;
}

.page .header-container .header .header-search-bar .form-search{
  border:2px solid #BDBDBD;
  padding:0px;
  	-webkit-box-shadow: inset 1px 1px 2px 1px #aaa;
	-moz-box-shadow: inset 1px 1px 2px 1px #aaa;
	box-shadow: inset 1px 1px 5px 1px #bbb; 

}

.page .header-container .header .header-search-bar .form-search button.button span span{

  background:none;
  display:none;

}

.page .header-container .header .header-search-bar .form-search button.button span{
  width:20px;
  background-image:url("../images/rightarrow_btn.png");
  background-size:10px 15px;
  background-repeat:no-repeat;
  background-position:center center;

}
.page .header-container .header .form-search input.input-text{

  background:none;
  padding:10px 15px;
  width:300px;
  border:0px;
}


/**********************footer***********************************/
.page .footer-container{
  border:0;
  margin:0px;
  padding:0px;
}

.page .footer-container .footer{
  background:none;

}

.page .footer-container .footer .footer-row{
  width:100%;
  
}

.page .footer-container .footer .footer-row.first{
  height:50px;
  border-top:1px solid #315474;
}

.page .footer-container .footer .footer-row.first .footer-contact-us{
   float:left;
   line-height:50px;
   font-size:17px;
   color:#31548D;
   text-transform:uppercase;
}


.page .footer-container .footer .footer-row.first .footer-credit-card{
   float:left;
   margin-left:80px;
   line-height:50px;
   font-size:14px;
   color:#31548D;
   text-transform:uppercase;
   
}

.page .footer-container .footer .footer-row.first .footer-credit-card img{
   margin-top:5px;

}

.page .footer-container .footer .footer-row.second{
  height:40px;
  background:#1F2322;
}

.page .footer-container .footer .footer-row.second ul.footer-main-links{
   width:60%;
   margin:0px 20%;

}

.page .footer-container .footer .footer-row.second ul.footer-main-links li{
   display:inline;
   font-size:16px;
   line-height:40px;
   padding:0px 5%;
   border-right:2px solid #FFFFFF;
   
}

.page .footer-container .footer .footer-row.second ul.footer-main-links li.last{
   border-right:0px;
}

.page .footer-container .footer .footer-row.second ul.footer-main-links li a{
   color:#FFFFFF;
}

.page .footer-container .footer .footer-row.third{
   height:200px;
   background:#315474;  
}


.page .footer-container .footer .footer-row.third .footer-quick-links{
   float:left;
   width:570px;
   

}

.page .footer-container .footer .footer-row.third .footer-quick-links .footer-quick-links-title{
   font-size:17px;
   color:#EED558;
   text-transform:uppercase;
   margin-top:20px;
   margin-left:30px;
   width:70%;
   border-bottom:2px solid #E6E6E6;
}

.page .footer-container .footer .footer-row.third .footer-quick-links .footer-quick-links-window{
   width:540px;
   height:150px;
   margin-top:20px;

}

.page .footer-container .footer .footer-row.third .footer-quick-links .footer-quick-links-window .footer-quick-links-window-column ul{
  width:150px;
  margin-left:30px;

}

.page .footer-container .footer .footer-row.third .footer-quick-links .footer-quick-links-window .footer-quick-links-window-column ul li a{
  font-size:13px;
  color:#FFFFFF;
  

}

.page .footer-container .footer .footer-row.third .footer-store-info{
   float:left;
   width:370px;
}

.page .footer-container .footer .footer-row.third .footer-email-signup {

   width:370px;
   height:80px;


}

.page .footer-container .footer .footer-row.third .footer-email-signup div p{
   font-size: 13px;
   color:#FFFFFF;
   text-transform:uppercase;
   margin-top:10px;

}

.page .footer-container .footer .footer-row.third .footer-email-signup .footer-newsletter{
   margin-top:10px;
  
}
.page .footer-container .footer .footer-row.third .footer-email-signup .footer-newsletter .form-subscribe{
   width:350px;
   height:40px;

}

a.button, button.button span, a.button span, button.button span span{
   background:none;
}
.page .footer-container .footer .footer-row.third .footer-email-signup .footer-newsletter .form-subscribe button.button{
    background-color: transparent;
    background-image: url("../images/submit-btn.png");
    background-repeat: no-repeat;
	margin:0px;

}
.page .footer-container .footer .footer-row.third .footer-email-signup .footer-newsletter .form-subscribe button.button span{
    width:60px;
	height:45px;

}

.page .footer-container .footer .footer-row.third .footer-email-signup .footer-newsletter .form-subscribe input.input-text{
    display: block;
    height: 25px;
    width: 265px;
  	-webkit-box-shadow: inset 1px 1px 2px 1px #aaa;
	-moz-box-shadow: inset 1px 1px 2px 1px #aaa;
	box-shadow: inset 1px 1px 5px 1px #bbb; 
	background:#EEEEEE;
}

.page .footer-container .footer .footer-row.third .footer-email-signup .footer-newsletter .form-subscribe input.input-text:focus{
	background:#FFFFFF;
	transition: background 0.5s ease 0s;
}

.page .footer-container .footer .footer-row.third .footer-store-info-links{
   width:370px;
   height:40px;
   

}

.page .footer-container .footer .footer-row.third .footer-store-info-links ul{
    width: 330px;
	margin:0px;
}
	
.page .footer-container .footer .footer-row.third .footer-store-info-links ul li{
  float:left;
  margin-right:30px;



}

.page .footer-container .footer .footer-row.third .footer-store-info-links ul li a{
  font-size:12px;
  color:#B3B3B3;
  font-weight:bold;

}

.page .footer-container .footer .footer-row.third .footer-copyright address,
.page .footer-container .footer .footer-row.third .footer-promotion span{
  font-size:11px;
  color:#B3B3B3;

}

.page .footer-container .footer .footer-row.last .footer-bottom-img-col{
   float:left;
   margin-left:25px;

}

/********************************navigation**************************************/
.page .nav-container{
    height:40px;
    z-index: 6;
	margin:0px;
	padding:0px;
}

.page #nav{
   background:none;
   padding:0px;
   height:40px;


}

#nav li.level1.parent{
   float:left;
   line-height:40px;

   


}



/*******************************homepage**************************************/

.page .main .home-info{
    width:500px;

}

.page .main .home-info .home-info-title{
    font-size:18px;
	color: #31548D;
	text-transform: uppercase;
	margin-top:30px;
  
}

.page .main .home-info .home-info-description p{

    font-size:13px;
	color: #555555;
}